{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "plugins": [
    "import",
    "prettier"
  ],
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "cva/webpack.config.js"
      }
    }
  },
  "rules": {
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true
      }
    ],
    "import/no-cycle": "error",
    "import/extensions": [
      2,
      "ignorePackages"
    ],
    "linebreak-style": "off",
    "arrow-body-style": [
      "error",
      "always"
    ],
    "import/no-extraneous-dependencies": "off"
  }
}